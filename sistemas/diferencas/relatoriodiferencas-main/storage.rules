rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isAdmin() {
      return request.auth != null && 
        get(/databases/(default)/documents/usuarios/$(request.auth.uid)).data.isAdmin == true;
    }
    match /posConferencia/{matricula}/{relatorioId}/{filename} {
      // Admin pode tudo
      allow read, write, delete: if isAdmin();
      // Usuário comum pode ler apenas imagens da sua matrícula
      allow read: if request.auth != null &&
        get(/databases/(default)/documents/usuarios/$(request.auth.uid)).data.matricula == matricula;
    }
  }
}
